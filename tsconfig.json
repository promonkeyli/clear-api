{
	"compilerOptions": {
		"outDir": "dist",
		"rootDir": "src",
		"target": "es2015",
		"module": "ESNext",
		"declaration": true,
		"declarationDir": "dist/types",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"moduleResolution": "Node"
	},
	"exclude": ["node_modules", "dist"]
}
